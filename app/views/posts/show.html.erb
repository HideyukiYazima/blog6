
<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-user-name">
        <h1><%= @post.title %></h1>
        <p><%= @post.content %></p>
      </div>
        <div class="post-image">
        <% if @post.image.present? %>
        <%= image_tag @post.image.url %>
        </div>
        <% end %>
    </div>
  </div>
</div>
        <p><%= link_to "一覧に戻る", posts_path %></p>
